<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.StaffDetailsActivity">

    <include
        android:id="@+id/staff_details_toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentTop="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="75sp"
        android:layout_below="@id/staff_details_toolbar"
        android:background="@color/primary" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/staff_details_toolbar"
        android:layout_margin="15sp"
        android:elevation="6sp"
        app:cardCornerRadius="6sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/staff_details_pro_pic"
                    android:layout_width="200sp"
                    android:layout_height="200sp"
                    android:layout_centerInParent="true"
                    android:layout_margin="15sp"
                    android:src="@drawable/random" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/staff_details_edit_staff_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="16sp"
                    android:layout_marginEnd="16sp"
                    android:backgroundTint="@color/grey_background"
                    android:src="@drawable/edit"
                    app:borderWidth="0sp"
                    app:rippleColor="@color/grey" />

            </RelativeLayout>


            <TextView
                android:id="@+id/staff_details_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Adams"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="32sp"
                android:layout_marginVertical="10sp"
                android:background="@color/grey_background" />

            <TextView
                android:id="@+id/staff_details_dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/01/1999"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="32sp"
                android:layout_marginVertical="10sp"
                android:background="@color/grey_background" />

            <TextView
                android:id="@+id/staff_details_work_exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Years of Experience"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="32sp"
                android:layout_marginVertical="10sp"
                android:background="@color/grey_background" />

            <com.ornach.nobobutton.NoboButton
                android:id="@+id/staff_details_view_aadhaar_btn"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_marginHorizontal="32sp"
                android:layout_marginVertical="15sp"
                app:nb_backgroundColor="@color/primary"
                app:nb_focusColor="@color/primary_light"
                app:nb_radius="4dp"
                app:nb_text="View Aadhaar"
                app:nb_textAllCaps="true"
                app:nb_textColor="@color/white"
                app:nb_textSize="16sp"
                app:nb_textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>